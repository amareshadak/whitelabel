<div class="full-content margin-top-20">
    <div class="card-body">
        <div class="row example-row" style="box-shadow: 5px 10px #888888; border: 1px solid #888888; padding:20px;">
            <div class="col-md-12 row">
                <div class="col-md-4 row">
                    <div class="col-md-3" style="text-align:center;"><i class="fa fa-user fa-4x"></i></div>
                    <div class="col-md-9 ">
                        <div>
                            <div style="border-bottom:1px solid #ccc; margin-top:10px;">
                                <div class="input-wrapper">
                                    <b>   @ViewBag.MemberName</b>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 row">
                    <div class="col-md-3" style="text-align:center;"><i class="fa fa-address-card fa-4x"></i> </div>
                    <div class="col-md-9 ">
                        <div>
                            <div style="border-bottom:1px solid #ccc; margin-top:10px;">
                                <div class="input-wrapper">
                                    <b>
                                        @ViewBag.Address<br />
                                        @ViewBag.State
                                    </b>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 row">
                    <div class="col-md-3" style="text-align:center;"><i class="fa fa-address-card fa-4x"></i></div>
