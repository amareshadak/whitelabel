@using NonFactors.Mvc.Grid;
@{
    ViewBag.Title = "All RDS Cancellation TR List";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="full-content margin-top-20">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 row headcolor">
                <div class="col-md-4" style="text-align:left; padding-top:3px;"><i class="fa fa-list fa-3x"></i></div>
                <div class="col-md-4"></div>
                <div class="col-md-4" style="text-align:right; padding-top:10px;">
                    <h3>Total PNR List</h3>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="card" style="margin-bottom:20px;">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-12 row">
                            <h3>Total Unsuccessful Updation</h3>
                            @Html.AjaxGrid(Url.Action("RdsCancellationDetails", "MemberRDSFileProcessing",new {area="Admin" }))
                        </div>
                    }
                </div>
            </div>
            <div class="card">
                <div class="card-body" style="margin-bottom:20px;">
                    <div class="col-md-12 row">
                        <h3>  Total Successful Updation</h3>
                        @Html.AjaxGrid(Url.Action("RdsCancellationDetailsInfo", "MemberRDSFileProcessing", new { area = "Admin" }))
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="col-md-12 row">
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-4">
                                <div class="card-body text-center">
                                    <i class="fas fa-rupee-sign fa-4x"></i>
                                    <div class="content" style="max-width:100%;">
                                        <p class="text-muted mt-2 mb-0">Total Unsuccessful Updation </p>
                                        <p class="text-primary text-24 line-height-1 mb-2">@ViewBag.NonBookedPNR</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-4">
                                <div class="card-body text-center">
                                    <i class="fas fa-rupee-sign fa-4x"></i>
                                    <div class="content" style="max-width:100%;">
                                        <p class="text-muted mt-2 mb-0">Total Successful Updation</p>
                                        <p class="text-primary text-24 line-height-1 mb-2">@ViewBag.BookedPNR</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="card card-icon-bg card-icon-bg-primary o-hidden mb-4">
                                    <div class="card-body text-center">
                                        <i class="fa fa-users fa-4x"></i>
                                        <div class="content" style="max-width:100%;">
                                            <p class="text-muted mt-2 mb-0">No Of Booked PNR Amount</p>
                                            <p class="text-primary text-24 line-height-1 mb-2">@ViewBag.BookingBookedPNR</p>
                                        </div>
                                    </div>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



