@using NonFactors.Mvc.Grid;
@using WHITELABEL.Web.Helper;
@model WHITELABEL.Data.Models.TBL_FLIGHT_BOOKING_DETAILS
@{
    ViewBag.Title = "Total Flight Booking History";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-horizontal padding-top-20">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 row headcolor">
                <div class="col-md-4" style="text-align:left; padding-top:3px;"><i class="fa fa-edit   fa-3x"></i> </div>
                <div class="col-md-8" style="text-align:left; padding-top:10px;">
                    <h3>
                        Flight Booking History
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class=" card">
                <div class="card-body">
                    <div class="panel-heading" style="padding-bottom:10px;">
                        <div class="card-title row" align="right">
                            <div class="col-md-6 text-left">
                                @*<button id="btnExportrecoardadmin" class="btn btn-info btn-xs"><span class="ion-forward"></span> EXPORT</button>*@
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        
                        <div class="row example-row" style="margin-bottom:10px;">
                            <div class="col-md-5">
                                <div class="form-group row">
                                    <label class="control-label col-md-3">Date From</label>
                                    <div class="col-md-9">
                                        <div class="inputer">
                                            <div class="input-wrapper">
                                                @Html.EditorFor(model => model.FROM_DATE, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control date", id = "txtFromDate", @onkeydown = "return false;", @placeholder = "yyyy-MM-dd" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group row">
                                    <label class="control-label col-md-3">Date From</label>
                                    <div class="col-md-9">
                                        <div class="inputer">
                                            <div class="input-wrapper">
                                                @Html.EditorFor(model => model.TO_DATE, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control date", id = "txtToDate", @onkeydown = "return false;", @placeholder = "yyyy-MM-dd" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="inputer">
                                    <div class="input-wrapper">
                                        <a href="#" class="btn btn-primary" id="btnSearchDAteWise">Search Date Wise</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row example-row">@Html.AjaxGrid(Url.Action("FLightBookingDetailsGrid", "MemberTransactionReport", new { area = "Admin" }))</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="getpassengerlistModal" tabindex="-1" role="dialog" aria-labelledby="getpassengerlist" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Passanger Deatils</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>                
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#txtFromDate').datepicker({
            format: "yyyy-MM-dd",
            language: "es",
            autoclose: true,
            todayHighlight: true,
            changeMonth: true,
            changeYear: true
        });
    });
    $(function () {
        $('#txtToDate').datepicker({
            format: "yyyy-MM-dd",
            language: "es",
            autoclose: true,
            todayHighlight: true,
            changeMonth: true,
            changeYear: true
        });
    });

    $("#btnSearchDAteWise").on("click", function () {        
        var Date_From = $('#txtFromDate').val();
        var Date_TO = $('#txtToDate').val();
        $('.mvc-grid').mvcgrid({
            query: 'DateFrom=' + Date_From + '&Date_To=' + Date_TO,            
            reload: true,
            reloadStarted: function () {
                $(".divFooterTotalComm").remove();
            },
        });
    });

</script>



