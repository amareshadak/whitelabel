@using NonFactors.Mvc.Grid;
@using WHITELABEL.Web.Helper;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-12 row headcolor">
                <div class="col-md-4" style="text-align:left; padding-top:3px;"><i class="fa fa-list fa-3x"></i></div>
                <div class="col-md-4"></div>
                <div class="col-md-4" style="text-align:right; padding-top:10px;">
                    <h3>
                        Admin Commission List
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-12 padding-top-20">
            <div class="card">
                <div class="card-body" style="text-align:center;">
                    <h3 style="margin-bottom:30px;">Mobile / Utility Slab</h3>
                    <div class="card-header text-right">
                        @*<button id="btnExportrecoardMerchant" class="btn btn-info btn-xs">EXPORT</button>*@
                        <a href="@(Url.Action("ExportIndexGrid","AdminCommissionList",new {area="Admin" }) + ViewContext.HttpContext.Request.QueryString)" class="btn btn-info btn-xs"><span class="ion-forward"></span>Export</a>
                    </div>
                    <div class="row example-row" id="ExportDiv" style="width:100%">
                        @Html.AjaxGrid(Url.Action("IndexGrid", "AdminCommissionList", new { area = "Admin" }))
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body" style="text-align:center;">
                    <h3 style="margin-bottom:30px;">DMR Slab</h3>
                    <div class="card-header text-right">
                        @*<button id="btnExportrecoardMerchant" class="btn btn-info btn-xs">EXPORT</button>*@
                        <a href="@(Url.Action("ExportDMTCommissionIndexGrid","AdminCommissionList",new {area="Admin" }) + ViewContext.HttpContext.Request.QueryString)" class="btn btn-info btn-xs"><span class="ion-forward"></span>Export</a>
                    </div>
                    <div class="row example-row" id="ExportDiv" style="width:100%">
                        @Html.AjaxGrid(Url.Action("DMTCommissionIndexGrid", "AdminCommissionList", new { area = "Admin" }))
                    </div>
                </div>
            </div>
        </div>
    </div>

}
